	--*---------------------- theorems -----------------------*--
	!add_zero 	:= ..0 + 0 := ..0
	!mul_zero 	:= ..0 * 0 := 0
	!mul_one 	:= ..0 * 1 := ..0

	!swap_add 	:= ..0 + ..1 := ..1 + ..0
	!swap_mul 	:= ..0 * ..1 := ..1 * ..0

	!move_sub	:= ..0 - ..1 = ..2 := ..0 = ..2 + ..1

	!simpl_div 	:= (..0 * ..1) / (..0 * ..2) := ..1 / ..2
	!simpl_mod 	:= ..0 * ..1 % ..0 := ..1 % 1

	--*--------------------- conclusions ---------------------*--
	&sides_equal t := ..0 <=> ..0 -- identical expressions are equal
	&mod_one (x: int) t := x % 1 -- any integer is divisible by 1
	&div_zero f := .. / 0 -- nothing can be divided by zero

